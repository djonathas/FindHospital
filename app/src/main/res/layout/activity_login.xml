<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.catolica.findhospital.LoginActivity">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sing_in_button_google"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

    <Button
        android:text="Criar Usuário"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sing_in_button_google"
        android:layout_alignLeft="@+id/sing_in_button_google"
        android:layout_alignStart="@+id/sing_in_button_google"
        android:layout_marginTop="20dp"
        android:id="@+id/btnCreateUser" />

    <Button
        android:text="Logar com E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCreateUser"
        android:layout_alignLeft="@+id/btnCreateUser"
        android:layout_alignStart="@+id/btnCreateUser"
        android:layout_marginTop="20dp"
        android:id="@+id/btnSignInEmailAndPassword" />

    <Button
        android:text="Logar Anônimamente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSignInEmailAndPassword"
        android:layout_alignLeft="@+id/btnSignInEmailAndPassword"
        android:layout_alignStart="@+id/btnSignInEmailAndPassword"
        android:layout_marginTop="20dp"
        android:id="@+id/btnSignInAnonymously" />

</RelativeLayout>
